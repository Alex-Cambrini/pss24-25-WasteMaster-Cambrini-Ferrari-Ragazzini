<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unibo.wastemaster.controller.dashboard.DashboardController"
      spacing="24" styleClass="center-pane">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>
    <children>
        <!-- KPI Cards -->
        <HBox spacing="24" alignment="CENTER">
            <VBox spacing="6" alignment="CENTER">
                <Label text="👥" styleClass="kpi-icon"/>
                <Label fx:id="totalCustomersLabel" text="-" styleClass="kpi-number"/>
                <Label text="Customers" styleClass="kpi-label"/>
            </VBox>
            <VBox spacing="6" alignment="CENTER">
                <Label text="♻️" styleClass="kpi-icon"/>
                <Label fx:id="totalCollectionsLabel" text="-" styleClass="kpi-number"/>
                <Label text="Collections" styleClass="kpi-label"/>
            </VBox>
            <VBox spacing="6" alignment="CENTER">
                <Label text="🚚" styleClass="kpi-icon"/>
                <Label fx:id="totalTripsLabel" text="-" styleClass="kpi-number"/>
                <Label text="Trips" styleClass="kpi-label"/>
            </VBox>
            <VBox spacing="6" alignment="CENTER">
                <Label text="🧾" styleClass="kpi-icon"/>
                <Label fx:id="invoicesToPayLabel" text="-" styleClass="kpi-number"/>
                <Label text="Invoices to pay" styleClass="kpi-label"/>
            </VBox>
        </HBox>

        <!-- Collections per Month Chart -->
        <BarChart fx:id="collectionsChart" title="Collections per Month" prefHeight="250" prefWidth="500">
            <xAxis>
                <CategoryAxis label="Month"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Collections"/>
            </yAxis>
        </BarChart>

        <VBox spacing="8">
            <Label text="Recent activity / Notifications" styleClass="title-4"/>
            <ListView fx:id="notificationsList" prefHeight="120"/>
        </VBox>
    </children>
</VBox>