<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.customer.CustomersController">
    <children>
        <HBox alignment="TOP_CENTER" minHeight="40" prefHeight="60" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="addCustomerButton" mnemonicParsing="false" onAction="#handleAddCustomer" text="Add Customer" styleClass="accent"/>
                <Region prefHeight="20" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="filterButton" onMouseClicked="#showFilterMenu" text="Filter â–¼" styleClass="accent"/>
                <TextField fx:id="searchField" promptText="Search..." />
                <Button mnemonicParsing="false" onAction="#handleResetSearch" text="Reset" styleClass="accent, button-outlined"/>
            </children>
        </HBox>
        <TableView fx:id="customerTable" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100" text="Name" />
                <TableColumn fx:id="surnameColumn" prefWidth="100" text="Surname" />
                <TableColumn fx:id="emailColumn" prefWidth="150" text="Email" />
                <TableColumn fx:id="streetColumn" prefWidth="100" text="Street" />
                <TableColumn fx:id="civicColumn" prefWidth="60" text="Civic n." />
                <TableColumn fx:id="cityColumn" prefWidth="100" text="City" />
                <TableColumn fx:id="postalColumn" prefWidth="90" text="Postal Code" />
            </columns>
        </TableView>
        <HBox alignment="TOP_RIGHT" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleEditCustomer" text="Edit" styleClass="accent"/>
                <Button mnemonicParsing="false" onAction="#handleDeleteCustomer" text="Delete" styleClass="danger"/>
            </children>
            <padding>
                <Insets right="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
