<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.customer.CustomersController">

    <children>

        <HBox alignment="TOP_CENTER" minHeight="40.0" prefHeight="60.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="addCustomerButton" onAction="#handleAddCustomer" styleClass="success" text="Add Customer" />
                <Region prefHeight="20.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="filterButton" onMouseClicked="#showFilterMenu" styleClass="accent" text="Filter â–¼" />
                <TextField fx:id="searchField" promptText="Search..." />
                <Button onAction="#handleResetSearch" styleClass="accent, button-outlined" text="Reset" />
            </children>
        </HBox>

        <TableView fx:id="customerTable" prefHeight="300.0" prefWidth="600.0" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="surnameColumn" prefWidth="100.0" text="Surname" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="locationColumn" maxWidth="400.0" minWidth="180.0" prefWidth="220.0" text="Location" />
            </columns>
        </TableView>

        <HBox alignment="TOP_RIGHT" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="editCustomerButton" disable="true" onAction="#handleEditCustomer" styleClass="accent" text="Edit" />
                <Button fx:id="deleteCustomerButton" disable="true" onAction="#handleDeleteCustomer" styleClass="danger" text="Delete" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>

    </children>
</VBox>
