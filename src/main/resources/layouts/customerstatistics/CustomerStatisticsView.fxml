<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/21"
      fx:controller="it.unibo.wastemaster.controller.customerstatistics.CustomerStatisticsController"
      spacing="18" styleClass="center-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Customer Statistics" styleClass="title-3"/>
        <HBox spacing="6">
            <Label text="Customer:" styleClass="title-4"/>
            <Label fx:id="customerNameLabel" text="-"/>
        </HBox>
        <GridPane hgap="20" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints minWidth="120"/>
            </columnConstraints>
            <children>
                <Label text="Total Invoices:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="title-4"/>
                <Label fx:id="totalInvoicesLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Total Collections:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="title-4"/>
                <Label fx:id="totalCollectionsLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="title-4"/>
                <Label fx:id="totalAmountLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       styleClass="accent"/>
                <Label text="Unpaid Amount:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="title-4"/>
                <Label fx:id="unpaidAmountLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       styleClass="danger"/>
                <Label text="Paid Amount:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="title-4"/>
                <Label fx:id="paidAmountLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       styleClass="success"/>
            </children>
        </GridPane>
    </children>
</VBox>