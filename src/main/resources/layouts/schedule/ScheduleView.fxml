<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.schedule.ScheduleController">
    <children>
        <HBox alignment="TOP_CENTER" minHeight="40.0" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="addScheduleButton" mnemonicParsing="false" onAction="#handleAddSchedule" styleClass="success" text="Add Schedule" />
                <Region prefHeight="20" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="filterButton" onMouseClicked="#showFilterMenu" styleClass="accent" text="Filter â–¼" />
                <TextField fx:id="searchField" promptText="Search..." />
                <Button mnemonicParsing="false" onAction="#handleResetSearch" styleClass="accent, button-outlined" text="Reset" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="30.0" spacing="10.0">
<children>
        <CheckBox fx:id="showActiveCheckBox" mnemonicParsing="false" text="Show Active">
            <tooltip>
                <Tooltip text="Show Active" />
            </tooltip>
        </CheckBox>
        <CheckBox fx:id="showPausedCheckBox" mnemonicParsing="false" text="Show Paused">
            <tooltip>
                <Tooltip text="Show Paused" />
            </tooltip>
        </CheckBox>
        <CheckBox fx:id="showCompletedCheckBox" mnemonicParsing="false" text="Show Completed">
            <tooltip>
                <Tooltip text="Show Completed" />
            </tooltip>
        </CheckBox>
        <CheckBox fx:id="showDeletedCheckBox" text="Show Deleted">
            <tooltip>
                <Tooltip text="Show Deleted" />
            </tooltip>
        </CheckBox>
        <CheckBox fx:id="oneTimeCheckBox" text="OneTime">
            <tooltip>
                <Tooltip text="OneTime" />
            </tooltip>
        </CheckBox>
        <CheckBox fx:id="recurringCheckBox" text="Recurring">
            <tooltip>
                <Tooltip text="Recurring" />
            </tooltip>
        </CheckBox>
    </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
        </HBox>
        <TableView fx:id="scheduleTable" prefHeight="300.0" prefWidth="600.0" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="wasteColumn" prefWidth="100" text="Waste Name" />
                <TableColumn fx:id="typeColumn" prefWidth="120" text="Schedule Type" />
                <TableColumn fx:id="frequencyColumn" prefWidth="100" text="Frequency" />
                <TableColumn fx:id="dateColumn" prefWidth="120" text="Execution Date" />
                <TableColumn fx:id="startColumn" prefWidth="120" text="Start Date" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                <TableColumn fx:id="customerNameColumn" prefWidth="100" text="Name" />
                <TableColumn fx:id="customerSurnameColumn" prefWidth="100" text="Surname" />
            </columns>

        </TableView>
        <HBox alignment="TOP_RIGHT" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="changeFrequencyButton" disable="true" mnemonicParsing="false" onAction="#handleChangeFrequency" styleClass="accent" text="Change Frequency" />
                <Button fx:id="toggleStatusButton" disable="true" mnemonicParsing="false" onAction="#handleStatusToggle" styleClass="accent" text="Pause" />
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#handleDeleteSchedule" styleClass="danger" text="Delete" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
