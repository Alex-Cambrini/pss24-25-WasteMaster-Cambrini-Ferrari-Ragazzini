<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="150.0" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" spacing="10.0"
	xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="it.unibo.wastemaster.controller.waste.ChangeDayDialogController">
	<children>
		<Label text="Change Collection Day">
			<VBox.margin>
				<Insets bottom="10.0" top="10.0" />
			</VBox.margin>
		</Label>
		<ComboBox fx:id="dayOfWeekComboBox" prefWidth="150.0" />
		<Region VBox.vgrow="ALWAYS" />
		<HBox alignment="CENTER_RIGHT" spacing="10.0">
			<children>
				<Button text="Save" onAction="#handleSave" styleClass="success">
					<HBox.margin>
						<Insets bottom="20.0" />
					</HBox.margin>
				</Button>
			</children>
			<padding>
				<Insets bottom="10.0" right="10.0" />
			</padding>
		</HBox>
	</children>
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />
	</padding>
</VBox>