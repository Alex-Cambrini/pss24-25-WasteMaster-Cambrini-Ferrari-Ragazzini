<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unibo.wastemaster.controller.waste.AddWasteController"
      prefHeight="300.0" prefWidth="600.0"
      styleClass="center-pane, modal-pane">

	<children>
		<GridPane prefHeight="200.0" prefWidth="600.0">
			<columnConstraints>
				<ColumnConstraints prefWidth="150.0" />
				<ColumnConstraints prefWidth="450.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
			</rowConstraints>

			<children>
				<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

				<Label text="Recyclable" GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<CheckBox fx:id="recyclableCheck" GridPane.columnIndex="1" GridPane.rowIndex="1" />

				<Label text="Dangerous" GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<CheckBox fx:id="dangerousCheck" GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
		</GridPane>

		<HBox alignment="TOP_RIGHT" spacing="10.0">
			<children>
				<Button text="Cancel" onAction="#handleAbortWasteCreation" styleClass="danger" />
				<Button text="Save" onAction="#handleSaveWaste" styleClass="success" />
			</children>
			<padding>
				<Insets top="10.0" right="20.0" />
			</padding>
		</HBox>
	</children>

	<padding>
		<Insets left="20.0" right="20.0" />
	</padding>
</VBox>
