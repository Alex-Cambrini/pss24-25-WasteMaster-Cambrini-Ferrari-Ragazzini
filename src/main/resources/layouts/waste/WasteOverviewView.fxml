<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.waste.WasteOverviewController">

    <children>
        <HBox alignment="TOP_CENTER" minHeight="40.0" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="addWasteButton" mnemonicParsing="false" onAction="#handleAddWaste" styleClass="success" text="Add Waste" />
                <Button fx:id="addProgramButton" mnemonicParsing="false" onAction="#handleAddProgram" styleClass="success" text="Add Program" />
                <Region prefHeight="20" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Search..." />
                <Button mnemonicParsing="false" onAction="#handleResetSearch" styleClass="accent, button-outlined" text="Reset" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <CheckBox fx:id="showRecyclableCheckBox" text="Show Recyclable" />
                <CheckBox fx:id="showDangerousCheckBox" text="Show Dangerous" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </HBox>

        <TableView fx:id="wasteTable" prefHeight="300.0" prefWidth="600.0" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="180" text="Waste Name" />
                <TableColumn fx:id="recyclableColumn" prefWidth="100" text="Recyclable" />
                <TableColumn fx:id="dangerousColumn" prefWidth="100" text="Dangerous" />
                <TableColumn fx:id="dayOfWeekColumn" prefWidth="120" text="Day of Week" />
            </columns>
        </TableView>

        <HBox alignment="TOP_RIGHT" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="changeDayButton" disable="true" mnemonicParsing="false" onAction="#handleChangeDay" styleClass="accent" text="Change Day" />
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#handleDeleteWaste" styleClass="danger" text="Delete" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>