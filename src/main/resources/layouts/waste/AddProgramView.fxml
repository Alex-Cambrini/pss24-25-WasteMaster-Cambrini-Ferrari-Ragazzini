<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.waste.AddProgramController" prefHeight="200.0" prefWidth="400.0" styleClass="center-pane, modal-pane">

    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints prefWidth="150.0" />
                <ColumnConstraints prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>

            <children>
                <Label text="Day of Week" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="dayOfWeekComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            </children>
        </GridPane>

        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button text="Cancel" onAction="#handleAbortProgramCreation" styleClass="danger"/>
                <Button text="Save" onAction="#handleSaveProgram" styleClass="success"/>
            </children>
            <padding>
                <Insets top="10.0" right="20.0"/>
            </padding>
        </HBox>
    </children>

    <padding>
        <Insets left="20.0" right="20.0"/>
    </padding>
</VBox>
