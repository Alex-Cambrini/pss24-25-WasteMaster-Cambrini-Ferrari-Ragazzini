<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unibo.wastemaster.controller.employee.EditEmployeeController"
      prefHeight="400.0" prefWidth="600.0">

	<padding>
		<Insets left="20.0" right="20.0" />
	</padding>

	<children>
		<GridPane prefWidth="600.0">
			<columnConstraints>
				<ColumnConstraints minWidth="130.0" prefWidth="130.0" />
				<ColumnConstraints minWidth="10.0" prefWidth="470.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
				<RowConstraints prefHeight="30.0" />
			</rowConstraints>
			<children>
				<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

				<Label text="Surname" GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

				<Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false" />

				<Label text="Role" GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

				<Label text="Licence" GridPane.columnIndex="0" GridPane.rowIndex="4" />
				<ComboBox fx:id="licenceComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

				<Label text="City" GridPane.columnIndex="0" GridPane.rowIndex="5" />
				<TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
			</children>
		</GridPane>

		<HBox alignment="TOP_RIGHT" spacing="10.0">
			<padding>
				<Insets top="10.0" right="20.0" />
			</padding>
			<children>
				<Button text="Cancel" onAction="#handleAbortEdit" />
				<Button text="Update" onAction="#handleUpdateEmployee" />
			</children>
		</HBox>
	</children>
</VBox>
