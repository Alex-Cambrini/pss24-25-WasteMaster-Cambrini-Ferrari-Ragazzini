<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.employee.EmployeeController" stylesheets="@style.css">

    <children>

        <HBox alignment="TOP_CENTER" spacing="10.0" prefHeight="60.0" minHeight="40.0" prefWidth="600.0">
            <children>
                <Button fx:id="addEmployeeButton" text="Add Employee" onAction="#handleAddEmployee" styleClass="success"/>
                <Region HBox.hgrow="ALWAYS" prefWidth="0.0" prefHeight="20.0"/>
                <Button fx:id="filterButton" text="Filter â–¼" onMouseClicked="#showFilterMenu" styleClass="accent"/>
                <TextField fx:id="searchField" promptText="Search..."/>
                <Button text="Reset" onAction="#handleResetSearch" styleClass="accent, button-outlined"/>
            </children>
        </HBox>

        <TableView fx:id="employeeTable" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name"/>
                <TableColumn fx:id="surnameColumn" prefWidth="100.0" text="Surname"/>
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email"/>
                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role"/>
                <TableColumn fx:id="licenceColumn" prefWidth="120.0" text="Licence"/>
                <TableColumn fx:id="locationColumn" text="Location" minWidth="180.0" prefWidth="220.0" maxWidth="400.0"/>
            </columns>
        </TableView>

        <HBox alignment="TOP_RIGHT" spacing="10.0" prefHeight="100.0" minHeight="50.0" prefWidth="600.0">
            <children>
                <Button fx:id="editEmployeeButton" text="Edit" onAction="#handleEditEmployee" styleClass="accent"/>
                <Button text="Delete" onAction="#handleDeleteEmployee" styleClass="danger"/>
            </children>
            <padding>
                <Insets top="10.0" right="20.0"/>
            </padding>
        </HBox>

    </children>
</VBox>
