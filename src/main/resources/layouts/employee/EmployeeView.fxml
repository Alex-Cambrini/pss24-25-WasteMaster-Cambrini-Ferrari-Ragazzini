<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.employee.EmployeeController">

    <children>
        <HBox alignment="TOP_CENTER" minHeight="40" prefHeight="60" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="addEmployeeButton" mnemonicParsing="false" onAction="#handleAddEmployee" text="Add Employee" />
                <Region prefHeight="20" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="filterButton" onMouseClicked="#showFilterMenu" text="Filter â–¼" />
                <TextField fx:id="searchField" promptText="Search..." />
                <Button mnemonicParsing="false" onAction="#handleResetSearch" text="Reset" />
            </children>
        </HBox>

        <TableView fx:id="employeeTable" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100" text="Name" />
                <TableColumn fx:id="surnameColumn" prefWidth="100" text="Surname" />
                <TableColumn fx:id="emailColumn" prefWidth="150" text="Email" />
                <TableColumn fx:id="roleColumn" prefWidth="100" text="Role" />
                <TableColumn fx:id="licenceColumn" prefWidth="120" text="Licence" />
                <TableColumn fx:id="cityColumn" prefWidth="100" text="City" />
            </columns>
        </TableView>

        <HBox alignment="TOP_RIGHT" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="editEmployeeButton" mnemonicParsing="false" onAction="#handleEditEmployee" text="Edit" />
                <Button mnemonicParsing="false" onAction="#handleDeleteEmployee" text="Delete" />
            </children>
            <padding>
                <Insets right="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
