<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unibo.wastemaster.controller.employee.AddEmployeeController"
      prefWidth="600.0" prefHeight="500.0"
      maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity">

	<children>
		<GridPane prefHeight="450.0" prefWidth="600.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="130.0" maxWidth="290.0"/>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="496.0" maxWidth="496.0"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
			</rowConstraints>
			<children>
				<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
				<TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

				<Label text="Surname" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
				<TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

				<Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
				<TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

				<Label text="Phone" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
				<TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

				<Label text="Street" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
				<TextField fx:id="streetField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

				<Label text="Civic" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
				<TextField fx:id="civicField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

				<Label text="City" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
				<TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

				<Label text="Postal Code" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
				<TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

				<Label text="Role" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
				<ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

				<Label text="Licence" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
				<ComboBox fx:id="licenceComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
			</children>
		</GridPane>

		<HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Button mnemonicParsing="false" text="Cancel" onAction="#handleAbortEmployeeCreation"/>
				<Button mnemonicParsing="false" text="Save" onAction="#handleSaveEmployee"/>
			</children>
			<padding>
				<Insets right="20.0" top="10.0"/>
			</padding>
		</HBox>
	</children>

	<padding>
		<Insets left="20.0" right="20.0"/>
	</padding>
</VBox>
