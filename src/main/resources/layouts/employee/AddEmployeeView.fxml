<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.employee.AddEmployeeController" styleClass="center-pane, modal-pane" prefWidth="600.0" prefHeight="400.0">

	<padding>
		<Insets left="20.0" right="20.0"/>
	</padding>

	<children>
		<GridPane prefHeight="374.0" prefWidth="600.0">
			<columnConstraints>
				<ColumnConstraints minWidth="130.0" prefWidth="130.0" maxWidth="290.0"/>
				<ColumnConstraints minWidth="10.0" prefWidth="496.0" maxWidth="496.0"/>
			</columnConstraints>

			<rowConstraints>
				<RowConstraints prefHeight="40.0"/>
				<RowConstraints prefHeight="40.0"/>
				<RowConstraints prefHeight="40.0"/>
				<RowConstraints prefHeight="80.0"/>
				<RowConstraints prefHeight="40.0"/>
				<RowConstraints prefHeight="40.0"/>
				<RowConstraints prefHeight="40.0"/>
			</rowConstraints>

			<children>
				<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
				<TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

				<Label text="Surname" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
				<TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

				<Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
				<TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

				<Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
				<HBox spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
					<children>
						<VBox>
							<Label text="Street"/>
							<TextField fx:id="streetField"/>
						</VBox>
						<VBox>
							<Label text="Civic"/>
							<TextField fx:id="civicField"/>
						</VBox>
						<VBox>
							<Label text="City"/>
							<TextField fx:id="cityField"/>
						</VBox>
						<VBox>
							<Label text="Postal Code"/>
							<TextField fx:id="postalCodeField"/>
						</VBox>
					</children>
				</HBox>

				<Label text="Phone" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
				<TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

				<Label text="Role" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
				<ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

				<Label text="Licence" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
				<ComboBox fx:id="licenceComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
			</children>
		</GridPane>

		<HBox alignment="TOP_RIGHT" spacing="10.0" prefHeight="100.0">
			<padding>
				<Insets right="20.0" top="10.0"/>
			</padding>
			<children>
				<Button text="Cancel" onAction="#handleAbortEmployeeCreation" styleClass="danger"/>
				<Button text="Save" onAction="#handleSaveEmployee" styleClass="success"/>
			</children>
		</HBox>
	</children>
</VBox>
