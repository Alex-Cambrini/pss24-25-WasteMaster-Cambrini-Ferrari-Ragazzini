<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.wastemaster.controller.invoice.EditInvoiceController">
    <children>
        <Label text="Edit Invoice" styleClass="header"/>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Collection:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="collectionCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="amountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#onCancel"/>
            <Button text="Save" onAction="#onSave"/>
        </HBox>
    </children>
</VBox>